@{
    ViewData["Title"] = "Home Page";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/category.js"></script>
<div class="container">
    <div class="row">

        <div class="col-md-4"><a href="#" id="testTweeterAPI1" class="btn btn-success" onclick="getTweetsPerSecond()">Tweets/second</a></div>
        <div class="col-md-4"><a href="#" id="testTweeterAPI2" class="btn btn-danger" onclick="getTweetsPerMinute()">Tweets/minute</a></div>
